{
  "name"             : "cubicmushroom/payments-stripe",
  "description"      : "Package for handling basic Stripe payment gateway operations",
  "type"             : "library",
  "license"          : "ISC",
  "authors"          : [
    {
      "name" : "Toby Griffiths",
      "email": "toby@cubicmushroom.co.uk"
    }
  ],
  "minimum-stability": "stable",
  "autoload"         : {
    "psr-4": {
      "CubicMushroom\\Payments\\Stripe\\": "src/"
    }
  },
  "repositories"     : [
    {
      "type": "vcs",
      "url" : "https://github.com/toby-griffiths/phpspec"
    }
  ],
  "require"          : {
    "omnipay/stripe"                    : "^2.0",
    "mathiasverraes/money"              : "^1.0",
    "cubicmushroom/hexagonal-components": "dev-master",
    "nicolopignatelli/valueobjects"     : "^3.0",
    "psr/log": "^1.0"
  },
  "require-dev"      : {
    "phpspec/phpspec"        : "dev-master",
    "codeception/codeception": "^2.1",
    "doctrine/annotations": "^1.2",
    "doctrine/cache": "^1.4"
  },
  "scripts"          : {
    "post-install-cmd": ["gulp test"],
    "post-update-cmd" : ["gulp test"],
    "pre-archive-cmd" : ["gulp test"]
  }
}
